<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Add Book To Store" textFill="BLUE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="100.0" text="Book Title" />
                  <TextField fx:id="bookTitle" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="100.0" text="Category" />
                  <TextField fx:id="bookCategory" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="100.0" text="Cost" />
                  <TextField fx:id="bookCost" />
               </children>
            </HBox>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="50.0" prefWidth="100.0" text="Author" />
                  <TextField fx:id="bookAuthor" />
               </children>
            </HBox>
            <Button fx:id="bookAddButton" mnemonicParsing="false" onAction="#addBook" text="Add" />
         </children>
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </VBox>
   </center>
   <right>
      <Button fx:id="btnSeeStore" mnemonicParsing="false" onAction="#seeStorehandle" style="-fx-background-color: green;" text="See Store" textAlignment="CENTER" textFill="#eeecec" BorderPane.alignment="TOP_CENTER">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Button>
   </right>
</BorderPane>
